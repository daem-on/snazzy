{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
